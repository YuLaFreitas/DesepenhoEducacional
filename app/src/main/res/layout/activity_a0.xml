<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="educacao.controle.com.desepenhoeducacional.A0"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageButton
        android:id="@+id/mais"
        android:layout_width="54dp"
        android:layout_height="87dp"
        android:src="@mipmap/maisPP"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/mais"
        android:textSize="50px"
         />
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/perfil"
            android:layout_width="54dp"
            android:layout_height="87dp"
            android:src="@mipmap/pessoinhaPP"
            />
        <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/perf"
        android:textSize="45px"
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/detalhe"
            android:layout_width="54dp"
            android:layout_height="87dp"
            android:src="@mipmap/AestilizadoPP"
            />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/deta"
        android:textSize="50px"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="inherit"
        android:paddingLeft="320sp"
        android:paddingBottom="0sp"
        android:paddingTop="150sp"
        >
        <ImageButton
            android:id="@+id/avancar"
            android:layout_width="54dp"
            android:layout_height="87dp"
            android:src="@mipmap/VoltarPP"
            />
</LinearLayout>

</LinearLayout>